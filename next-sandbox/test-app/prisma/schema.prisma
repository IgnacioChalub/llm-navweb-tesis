generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                   Int            @id @default(autoincrement())
  username             String         @unique
  email                String         @unique
  password             String
  balance              Float          @default(0)

  // Transactions where the user is the sender
  sentTransactions     Transaction[]  @relation("SentTransactions")

  // Transactions where the user is the recipient
  receivedTransactions Transaction[]  @relation("ReceivedTransactions")

  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
}

model Transaction {
  id             Int       @id @default(autoincrement())
  date           DateTime  @default(now())
  type           String    // e.g., "deposit", "withdrawal", "transfer"
  amount         Float

  // Sender of the transaction (nullable for deposits)
  senderId       Int?
  sender         User?     @relation("SentTransactions", fields: [senderId], references: [id])

  // Recipient of the transaction (nullable for withdrawals)
  recipientId    Int?
  recipient      User?     @relation("ReceivedTransactions", fields: [recipientId], references: [id])
}


